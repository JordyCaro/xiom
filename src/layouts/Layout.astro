---
interface Props {
  title?: string;
}

const { title = "Xiomy ❤️" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Una página de amor para Xiomara" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </head>
</html>

<style is:global>
  :root {
    --accent: #e74c3c;
    --accent-light: #ff7675;
  }
  
  html {
    font-family: system-ui, sans-serif;
    background: #f5e6d3;
  }
  
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
  }
</style>